Algoritmo "DependentesFuncionario"

Var
   Nome: caractere
   Sal, Nsal:real
   Dep:inteiro
Inicio
      Escreva("Qual o nome do funcionário? ")
      leia(Nome)
      Escreva("Qual o salário do funcionário? R$")
      leia(Sal)
      Escreva("Qual a quantidade de dependentes? ")
      leia(Dep)
      escolha Dep
              caso 0
                   Nsal <- Sal + (Sal*5/100)
              caso 1, 2, 3
                   Nsal <- Sal + (Sal*10/100)
              caso 4, 5, 6
                   Nsal <- Sal + (Sal*15/100)
              OutroCaso
                   Nsal <- Sal + (Sal*18/100)
              FimEscolha
              escreval("O novo salário de:", Nome,",", " será R$", NSal:5:2)
              

Fimalgoritmo
