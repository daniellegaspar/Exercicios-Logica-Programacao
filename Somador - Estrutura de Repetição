Algoritmo "Somador"

Var
    N, S:inteiro
    resp:caractere

Inicio
      S <- 0
      resp <- "S"
      Enquanto (resp = "S") faca
         Escreva ("Digite o  valor ==> ")
         leia(N)
         S <- S + N
         escreva("Você quer continuar? [S/N] ")
         leia(resp)
      FimEnquanto
      Escreval ("A soma de todos os valores digitados é", S)

Fimalgoritmo
