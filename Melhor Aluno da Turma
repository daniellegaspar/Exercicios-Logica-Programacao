Algoritmo "MelhorAlunoTurma"

Var
   nota, max,i, quant :Inteiro
   nome, melhor :caracter
Inicio
      Escreva ("Qual a quantidade de alunos?: ")
      Leia (quant)
      Max <- 0
      para i de 0 ate (quant-1) faca
      escrevaL("--------------------------")
      Escreva ("Qual o nome do aluno?: ")
      Leia (nome)
      Escreva ("Qual a nota do aluno? (valor de 0 a 10 ): ")
      Leia (nota)
      Se (nota > max) Entao
      max <- nota
      melhor <- nome
      FimSe
fimpara

Escreva ("Melhor aluno: " ,melhor,", com a nota ",max)

fimalgoritmo
